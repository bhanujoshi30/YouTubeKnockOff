<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.VideoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/statusbar_color</item>
    </style>

    <style name="Theme.VideoApp" parent="Base.Theme.VideoApp" />

    <style name="Textview.StyleHeader" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">0sp</item>
        <item name="android:paddingHorizontal">6sp</item>
    </style>

    <style name="Textview.title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">0sp</item>
        <item name="android:paddingHorizontal">6sp</item>
    </style>

    <style name="Textview.StyleDetail" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingVertical">0sp</item>
        <item name="android:paddingHorizontal">6sp</item>
    </style>

    <style name="Theme.Design.BottomSheetDialog.FullScreen" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.BottomSheet.FullScreen</item>
    </style>

    <style name="Widget.BottomSheet.FullScreen" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@null</item> <!-- Remove default rounded corners -->
        <item name="android:background">?android:attr/windowBackground</item> <!-- Full screen background -->
    </style>


</resources>